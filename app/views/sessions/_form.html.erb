<div class="container jumbotron text-center">
  <h3>Sign In</h3>
  <h2>Please Enter your information to Signup For a Sherpa Account</h2>
</div>

<div class="container jumbotron text-center center-block">
  <%= form_for :session, url: session_path do |f|  %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'%><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control'%><br>

      <%= f.submit 'Sign In', class: 'btn btn-sherpa-primary' %>
      <%= link_to t(".forgot_password"), new_password_path, class: 'btn btn-sherpa-primary' %>
  <% end %>
</div>

