<div class="container-fluid center-block text-center form-horizontal sherpa-left-form">
  <h2>Edit Trip Item</h2>

  <%= form_for (@tripitem) do |f| %>


      <div class="form-group">
        <%= f.label :activity_name, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :activity_name, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :location_name, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location_name, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :location_url, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :location_url, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :activity_time, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.datetime_select :activity_time, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :activity_address, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :activity_address, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>


      <div class="form-group">
        <%= f.label :activity_address_url, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :activity_address_url, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :sherpa_tip, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :sherpa_tip, class: 'form-control col-sm-10' %><br><br>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :reservation, class:'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :reservation, class: 'form-control col-sm-10' %><br><br><br>
        </div>
      </div>


      <h1><%= f.submit "Create Trip Item", class:"btn btn-primary" %></h1>

  <% end %>

</div>